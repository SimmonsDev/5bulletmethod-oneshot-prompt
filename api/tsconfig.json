{
  "compilerOptions": {
    "module": "ES2022",
    "target": "es2019",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "entries/**/*", "streak/**/*", "insight/**/*"],
  "exclude": ["node_modules", "dist"]
}
